<div class='row'>
    <div class='form-group col-md-6 col-md-offset-3'>
        {{#form '/api/reset-password' class='form'}}
            {{label 'current-password' 'Current Password'}}
            {{password 'current-password' user.password class='form-control input-sm'}}
            <br>
            {{label 'new-password' 'New Password'}}
            {{password 'new-password' user.password class='form-control input-sm'}}
            <br>
            {{label 'confirm-password' 'Confirm New Password'}}
            {{password 'confirm-password' user.password class='form-control input-sm'}}
            <br>
            {{hidden 'token' token}}
            {{button 'submit' 'Reset Password' class='btn btn-primary'}}
        {{/form}}
    </div>
</div>
<script src='/js/reset-password.js'></script>